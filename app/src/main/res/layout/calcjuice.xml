<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_x="22dp"
        android:layout_y="31dp"
        android:text="Serving Size"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="62dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="50dp"
        android:layout_y="96dp"
        android:text="Quantity"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="125dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="141dp"
        android:layout_y="186dp"
        android:text="Extras"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="240dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="138dp"
        android:layout_height="41dp"
        android:layout_x="218dp"
        android:layout_y="33dp"
        android:background="@android:drawable/picture_frame"
        android:entries="@array/size_juice"
        android:prompt="@string/size" />
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="31dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_x="199dp"
        android:layout_y="95dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="151dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="6dp"
        android:layout_y="318dp"
        android:text="Add Extra Ice"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="310dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="5dp"
        android:layout_y="280dp"
        android:text="Make it a Milkshake"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="352dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="7dp"
        android:layout_y="357dp"
        android:text="Make it a Smoothie"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="6dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="169dp"
        android:layout_height="82dp"
        android:layout_x="113dp"
        android:layout_y="420dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFF"
        android:text="ORDER NOW"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="424dp" />

    <Button
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFF"
        android:id="@+id/button5"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_x="158dp"
        android:layout_y="511dp"
        android:text="CLEAR"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="493dp" />
</AbsoluteLayout>

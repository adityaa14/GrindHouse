<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_x="22dp"
        android:layout_y="31dp"
        android:text="Serving Size"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="62dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="50dp"
        android:layout_y="96dp"
        android:text="Quantity"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="125dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="141dp"
        android:layout_y="186dp"
        android:text="Extras"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="240dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="138dp"
        android:layout_height="41dp"
        android:layout_x="218dp"
        android:layout_y="33dp"
        android:background="?attr/panelBackground"
        android:entries="@array/size_coffee"
        android:prompt="@string/size" />
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="31dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_x="199dp"
        android:layout_y="95dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="151dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="40dp"
        android:layout_y="263dp"
        android:text="Sugar"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="310dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="39dp"
        android:layout_y="314dp"
        android:text="Choco Chips"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="352dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="39dp"
        android:layout_y="369dp"
        android:text="Whipped Cream"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="6dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="169dp"
        android:layout_height="82dp"
        android:layout_x="115dp"
        android:layout_y="422dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFF"
        android:text="ORDER NOW"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="424dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_x="147dp"
        android:layout_y="507dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFF"
        android:text="CLEAR"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="493dp" />
</AbsoluteLayout>
